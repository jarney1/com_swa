<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="id"
			type="text"
			default="0"
			label="Id"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="user_id"
			type="sql"
			key_field="id"
			value_field="value"
			query="SELECT users.id, CONCAT(users.name, IF(ISNULL(member.id), '', ' (Already Member)')) AS value
			FROM #__users AS users
			LEFT JOIN #__swa_member member ON member.user_id = users.id
			ORDER BY users.id DESC"
			label="User"
			required="true"
			filter="safehtml"/>

		<field name="lifetime_member"
			type="checkbox"
			label="Lifetime Member"
			default="0">
		</field>

		<field name="sex"
			type="list"
			label="Sex"
			default="none"
			required="true">
			<option value="Male">Male</option>
			<option value="Female">Female</option>
		</field>

		<field name="tel"
			type="tel"
			class="inputbox"
			required="true"
			label="Phone Number"
			filter="safehtml"
			validate="tel"
			/>

		<field name="econtact"
			type="text"
			size="40"
			class="inputbox"
			label="Emerg contact"
			required="true"
			filter="safehtml"/>

		<field name="enumber"
			type="text"
			size="40"
			class="inputbox"
			label="Emerg number"
			required="true"
			filter="safehtml"/>

		<field name="dietary"
			type="list"
			label="Dietary Requirements?"
			default="None"
			required="true">
			<option value="NULL">None</option>
			<option value="Vegetarian">Vegetarian</option>
			<option value="Vegan">Vegan</option>
		</field>

	</fieldset>

</form>
