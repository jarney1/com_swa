<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="user_id"
			type="text"
			label="User id"
			required="true"
			filter="safehtml"/>

		<field name="sex"
			type="list"
			label="Sex"
			default="none"
			required="true">
			<option value="Male">Male</option>
			<option value="Female">Female</option>
		</field>

		<field name="dob"
			type="calendar"
			class="inputbox"
			required="true"
			format="%d-%m-%Y"
			default="NOW"
			label="Dob"
			filter="safehtml"/>

		<field name="tel"
			type="tel"
			class="inputbox"
			required="true"
			label="Phone Number"
			filter="safehtml"
			validate="tel"
			/>

		<field name="university_id"
			type="sql"
			default="1"
			key_field="id"
			value_field="name"
			query="SELECT id, name FROM #__swa_university"
			label="University"
			required="true"
			filter="safehtml"/>

		<field name="course"
			type="text"
			size="40"
			class="inputbox"
			label="Course"
			filter="safehtml"/>

		<field name="graduation"
			type="text"
			size="40"
			class="inputbox"
			label="Graduation Year"
			filter="safehtml"/>

		<field name="discipline"
			type="list"
			label="Discipline"
			>
			<option value="None">None</option>
			<option value="Race">Race</option>
			<option value="Wave">Wave</option>
			<option value="Freestyle">Freestyle</option>
		</field>

		<field name="level"
			type="list"
			label="Level"
			required="true">
			<option value="Beginner">Beginner</option>
			<option value="Intermediate">Intermediate</option>
			<option value="Advanced">Advanced</option>
		</field>

		<field name="econtact"
			type="text"
			size="40"
			class="inputbox"
			label="Emerg contact"
			required="true"
			filter="safehtml"/>

		<field name="enumber"
			type="text"
			size="40"
			class="inputbox"
			label="Emerg number"
			required="true"
			filter="safehtml"/>

		<field name="dietary"
			type="list"
			label="Dietary Requirements?"
			default="None"
			required="true">
			<option value="NULL">None</option>
			<option value="Vegetarian">Vegetarian</option>
			<option value="Vegan">Vegan</option>
		</field>

		<field name="swahelp"
			type="list"
			label="SWA help?"
			default="None"
			required="true">
			<option value="None">No thanks</option>
			<option value="Website">Website</option>
			<option value="Events">Events</option>
			<option value="Media">Media / Marketing</option>
		</field>

	</fieldset>

</form>
